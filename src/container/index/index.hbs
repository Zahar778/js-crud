<main class="main">
    <section class="">
        <div class="form">
  <h1 class="form__title">Создать пользовотеля</h1>
<form method="POST" action="/success-info">
  <div class="form__contrnt">
    <div class="form__field">
      <label for="email" class="form__label">Email адресс:</label>
      <input type="email" name="email" class="form__input">
    </div>
        <div class="form__field">
      <label for="login" class="form__label">Логин:</label>
      <input type="login" name="login" class="form__input">
    </div>
        <div class="form__field">
      <label for="password" class="form__label">Пароль:</label>
      <input type="password" name="password" class="form__input">
    </div>
    <button class="form__button">Создать!</button>
  </div>
</form>
</div>
    </section>

    <section class="">
        <div class="form">
  <h1 class="form__title">Список пользовотелей</h1>
    <div class="user-list">
      {{#with data.users}}
      {{#if isEmpty}}
        <mark>Пустой</mark>
        {{else}}
        <ul>
        {{#each list}}
          <li>{{email}} | {{login}} | {{id}} <a href="/success-info?id={{id}}">(удалить)</a></li>
        {{/each}}
        </ul>
        {{/if}}
      {{/with}}
    </div>
</form>
</div>
    </section>
</main>

